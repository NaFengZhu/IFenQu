<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_1"
        android:orientation="vertical">

        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@color/colorWhite" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite">

            <View
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_0.5"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toLeftOf="@+id/tv_hot_tag"
                android:background="@color/dialog_bg_logout"></View>

            <TextView
                android:id="@+id/tv_hot_tag"
                style="@style/text_style_12_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_11"
                android:paddingTop="@dimen/dp_11"
                android:text="@string/shop_hot_product" />

            <View
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_0.5"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/tv_hot_tag"
                android:background="@color/dialog_bg_logout"></View>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/hot_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_13"
            android:paddingTop="@dimen/dp_13">

            <TextView
                style="@style/text_style_12_3"
                android:layout_width="@dimen/dp_64"
                android:layout_height="@dimen/dp_24"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shop_subtitle_bg"
                android:gravity="center"
                android:text="@string/shop_new_product" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/new_product_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_15"
            android:paddingTop="@dimen/dp_13">

            <TextView
                style="@style/text_style_12_3"
                android:layout_width="@dimen/dp_64"
                android:layout_height="@dimen/dp_24"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shop_subtitle_bg"
                android:gravity="center"
                android:text="@string/shop_new_product_area" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/brand_area_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_13"
            android:paddingTop="@dimen/dp_13">

            <LinearLayout
                android:id="@+id/ll_get_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorWhite">

                <TextView
                    style="@style/text_style_12_3"
                    android:layout_width="@dimen/dp_64"
                    android:layout_height="@dimen/dp_24"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/shop_subtitle_bg"
                    android:gravity="center"
                    android:text="@string/shop_product_more" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/norrow_to_right_icon" />


            </LinearLayout>
        </LinearLayout>

        <View style="@style/view_border_style"></View>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>