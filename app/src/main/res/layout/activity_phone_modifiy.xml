<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_1"
    android:orientation="vertical">

    <com.ifenqu.app.widget.CommonTitleView
        android:id="@+id/comm_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45" />

    <View style="@style/view_border_style"></View>

    <EditText
        android:id="@+id/et_login_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/colorWhite"
        android:hint="@string/login_hint_phone"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:theme="@style/edittext_style_1" />

    <View
        style="@style/view_border_style"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"></View>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_45"
        android:background="@color/colorWhite"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <EditText
            android:id="@+id/et_input_verification"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorTransparent"
            android:hint="@string/login_hint_verification"
            android:theme="@style/edittext_style_1" />

        <TextView
            android:id="@+id/tv_verification_code"
            style="@style/text_style_16_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="获取验证码" />
    </RelativeLayout>

    <View
        style="@style/view_border_style"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"></View>

    <EditText
        android:id="@+id/et_verification_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_14"
        android:background="@color/colorWhite"
        android:hint="@string/login_hint_phone"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:theme="@style/edittext_style_1" />

    <TextView
        android:id="@+id/tv_login_sign_in"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_18"
        android:background="@drawable/login_bg"
        android:gravity="center"
        android:text="@string/login_text"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_18" />

</LinearLayout>