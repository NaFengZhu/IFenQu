<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/order_list_parent"
    android:layout_marginBottom="@dimen/dp_14"
    android:background="@color/bg_1"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/colorWhite"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:paddingLeft="@dimen/dp_18"
        android:paddingRight="@dimen/dp_18">

        <TextView
            android:id="@+id/tv_status_line"
            android:layout_width="@dimen/dp_3"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:background="@color/tab_color_selected" />

        <TextView
            android:id="@+id/tv_status"
            style="@style/text_style_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_toRightOf="@+id/tv_line"
            android:text="待支付" />

        <TextView
            android:id="@+id/tv_pay"
            style="@style/text_style_14_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingTop="@dimen/dp_3"
            android:paddingBottom="@dimen/dp_3"
            android:paddingRight="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_5"
            android:background="@drawable/order_bg"
            android:layout_alignParentRight="true"
            android:text="@string/order_detail_pay" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/line_border"
        android:paddingRight="@dimen/dp_15" />

    <RelativeLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_18"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_10">

        <ImageView
            android:id="@+id/iv_product_img"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:src="@drawable/phone_icon"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tv_product_name"
            style="@style/text_style_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_toRightOf="@+id/iv_product_img"
            android:ellipsize="end"
            android:text="Apple iPhone X 64GB 移动联通电信4G手 机 ( 银色 256GB )"
            android:maxLines="2" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/line_border"
        android:paddingLeft="@dimen/dp_15" />

    <RelativeLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingRight="@dimen/sp_16"
        android:layout_height="@dimen/dp_45">
        <TextView
            style="@style/text_style_11"
            android:layout_toLeftOf="@+id/tv_product_price"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥7988" />

        <TextView
            android:id="@+id/tv_product_price"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            style="@style/text_style_9_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text=".00" />

    </RelativeLayout>
</LinearLayout>
