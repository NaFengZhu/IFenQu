<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_item_text_bg"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvAlertDialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/text_style_16_3"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_51"
            android:paddingBottom="@dimen/dp_37"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/tvAlertDialogMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_15"
            android:gravity="left|top"
            android:textColor="@color/text_title_color" />
    </LinearLayout>

    <View style="@style/view_border_style"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btnAlertDialogNegative"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/to_alpha"
            android:text="取消"
            android:textColor="@color/text_title_color" />
        <View
            android:background="@color/line_border"
            android:layout_width="@dimen/dp_0.5"
            android:layout_height="match_parent"></View>

        <Button
            android:id="@+id/btnAlertDialogPositive"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:background="@drawable/to_alpha"
            android:layout_weight="1"
            android:text="去设置"
            style="@style/text_style_16_5"/>

    </LinearLayout>

</LinearLayout>