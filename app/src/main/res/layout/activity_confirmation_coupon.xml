<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ifenqu.app.widget.CommonTitleView
        android:id="@+id/comm_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"></com.ifenqu.app.widget.CommonTitleView>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TabLayout
            android:id="@+id/tl_tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            app:tabGravity="center"
            app:tabIndicatorColor="@color/coupon_tab"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/coupon_tab">

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可用" />

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="不可用" />

        </android.support.design.widget.TabLayout>
    </android.support.v4.view.ViewPager>

</LinearLayout>