<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_1"
    android:orientation="vertical">

    <com.ifenqu.app.widget.CommonTitleView
        android:id="@+id/comm_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/tab_style_12_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_6"
                android:paddingLeft="@dimen/dp_14"
                android:paddingTop="@dimen/dp_14"
                android:text="@string/product_confirmation" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/tv_address_parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:paddingLeft="@dimen/dp_14"
                    android:paddingRight="@dimen/dp_14">

                    <TextView
                        android:id="@+id/tv_address_title"
                        style="@style/text_style_16_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22dp" />

                    <TextView
                        android:id="@+id/tv_address_subtitle"
                        style="@style/text_style_14_9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_address_title"
                        android:layout_marginTop="@dimen/dp_16"
                        android:paddingBottom="@dimen/dp_20" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/norrow_to_right_icon" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/tv_new_address_parent"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_51"
                    android:background="@color/colorWhite"
                    android:paddingLeft="@dimen/dp_14"
                    android:paddingRight="@dimen/dp_14">

                    <TextView
                        style="@style/text_style_14_9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/product_confirmation_str1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/norrow_to_right_icon" />

                </RelativeLayout>
            </FrameLayout>

            <View style="@style/view_border_style"></View>

            <TextView
                style="@style/tab_style_12_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_6"
                android:paddingLeft="@dimen/dp_14"
                android:paddingTop="@dimen/dp_14"
                android:text="@string/product_confirmation_str2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:paddingLeft="@dimen/dp_14"
                android:paddingRight="@dimen/dp_14"
                android:paddingTop="@dimen/dp_14">

                <TextView
                    android:id="@+id/confirm_product_name"
                    style="@style/text_style_14_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_toLeftOf="@+id/ll_right_view"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="3" />


                <LinearLayout
                    android:id="@+id/ll_right_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/confirm_product_total_price"
                        style="@style/text_style_12_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:ellipsize="end"
                        android:maxLines="1"/>

                    <TextView
                        android:id="@+id/confirm_product_discount"
                        style="@style/text_style_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:ellipsize="end"
                        android:maxLines="1" />

                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/confirm_product_config"
                style="@style/text_style_14_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/confirm_product_name"
                android:background="@color/colorWhite"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingBottom="@dimen/dp_8"
                android:paddingLeft="@dimen/dp_14"
                android:paddingRight="@dimen/dp_14"
                android:paddingTop="@dimen/dp_4"/>

            <View
                style="@style/view_border_style"
                android:paddingLeft="@dimen/dp_14"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_51"
                android:background="@color/colorWhite"
                android:paddingLeft="@dimen/dp_14"
                android:paddingRight="@dimen/dp_14">

                <TextView
                    style="@style/text_style_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_product_calculate_price"
                    android:text="@string/product_confirmation_price" />

                <TextView
                    android:id="@+id/tv_product_calculate_price"
                    style="@style/text_style_16_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"/>

            </RelativeLayout>

            <View
                style="@style/view_border_style"
                android:layout_marginBottom="@dimen/dp_14"></View>

            <RelativeLayout
                android:id="@+id/rl_receipt_parent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_51"
                android:background="@color/colorWhite"
                android:paddingLeft="@dimen/dp_14"
                android:paddingRight="@dimen/dp_14">

                <TextView
                    style="@style/text_style_14_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/product_confirmation_receipt" />

                <TextView
                    android:id="@+id/iv_receipt_type"
                    style="@style/text_style_14_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv_receipt_type_img"
                    android:text="个人" />

                <ImageView
                    android:id="@+id/iv_receipt_type_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/norrow_to_right_icon" />

            </RelativeLayout>

            <View
                style="@style/view_border_style"
                android:layout_marginLeft="@dimen/dp_14"></View>

            <RelativeLayout
                android:id="@+id/rr_confirmation_coupon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_51"
                android:background="@color/colorWhite"
                android:paddingLeft="@dimen/dp_14"
                android:paddingRight="@dimen/dp_14">

                <TextView
                    android:id="@+id/tv_coupon_tip"
                    style="@style/text_style_14_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/product_confirmation_discount" />

                <TextView
                    android:visibility="gone"
                    style="@style/text_style_10_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_toRightOf="@+id/tv_coupon_tip"
                    android:background="@drawable/coupon_btn_bg"
                    android:gravity="center"
                    android:text="3" />

                <TextView
                    android:id="@+id/tv_discount_amount_pre"
                    style="@style/text_style_12_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_toLeftOf="@+id/tv_discount_amount"
                    android:text="抵扣" />

                <TextView
                    android:id="@+id/tv_discount_amount"
                    style="@style/text_style_16_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="￥00.00"
                    android:layout_toLeftOf="@+id/tv_coupon_img"/>

                <ImageView
                    android:id="@+id/tv_coupon_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/norrow_to_right_icon" />

            </RelativeLayout>

            <View
                style="@style/view_border_style"
                android:layout_marginLeft="@dimen/dp_14"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_51"
                android:background="@color/colorWhite"
                android:paddingLeft="@dimen/dp_14"
                android:paddingRight="@dimen/dp_14"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_credit_str"
                    style="@style/text_style_14_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/product_confirmation_credit" />

                <TextView
                    android:id="@+id/tv_credit"
                    style="@style/tab_style_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@+id/tv_credit_str"
                    android:text="30.00" />

                <TextView
                    android:id="@+id/tv_credit_available"
                    style="@style/tab_style_12_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@+id/tv_credit"
                    android:text="@string/product_confirmation_credit_available_1" />

                <TextView
                    android:id="@+id/tv_credit_available_use"
                    style="@style/tab_style_12_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_toLeftOf="@+id/tv_credit_available_num"
                    android:text="@string/product_confirmation_credit_use" />

                <EditText
                    android:id="@+id/tv_credit_available_num"
                    style="@style/tab_style_12_2"
                    android:layout_width="@dimen/dp_78"
                    android:layout_height="@dimen/dp_27"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/product_confirmation_bg" />

            </RelativeLayout>

            <View
                style="@style/view_border_style"
                android:layout_marginLeft="@dimen/dp_14"
                android:visibility="gone"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_51"
                android:background="@color/colorWhite"
                android:paddingLeft="@dimen/dp_14"
                android:paddingRight="@dimen/dp_14">

                <TextView
                    style="@style/text_style_14_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/product_confirmation_total_price" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_final_price"
                        style="@style/text_style_16_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:ellipsize="end"
                        android:maxLines="1"/>

                    <TextView
                        android:id="@+id/tv_save"
                        style="@style/tab_style_10_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:ellipsize="end"
                        android:maxLines="1" />

                </LinearLayout>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_51"
                android:background="@color/colorWhite"
                android:paddingLeft="@dimen/dp_14"
                android:paddingRight="@dimen/dp_14">

                <TextView
                    style="@style/text_style_14_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/product_confirmation_term" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:visibility="gone"
                        style="@style/text_style_14_3"
                        android:layout_width="@dimen/dp_66"
                        android:layout_height="@dimen/dp_34"
                        android:layout_centerVertical="true"
                        android:background="@drawable/product_detail_bg"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="不分期" />

                    <TextView
                        android:visibility="gone"
                        style="@style/text_style_14_3"
                        android:layout_width="@dimen/dp_66"
                        android:layout_height="@dimen/dp_34"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@drawable/product_detail_bg"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="6期" />

                    <TextView
                        style="@style/text_style_14_10"
                        android:layout_width="@dimen/dp_66"
                        android:layout_height="@dimen/dp_34"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@drawable/product_detail_bg2"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="12期" />

                </LinearLayout>


            </RelativeLayout>

            <View
                style="@style/view_border_style"
                android:layout_marginBottom="@dimen/dp_14"></View>

        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_74"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:paddingLeft="@dimen/dp_17">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ll_bottom_line"
                android:layout_marginBottom="@dimen/dp_2"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style_14_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="实付

" />

                <TextView
                    android:id="@+id/tv_pay_price"
                    style="@style/text_style_16_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:gravity="center"/>

            </LinearLayout>

            <View
                android:id="@+id/ll_bottom_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:layout_centerInParent="true"
                android:background="@color/line_border"
                android:paddingRight="@dimen/dp_45" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_bottom_line"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style_16_3"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="约" />

                <TextView
                    android:id="@+id/each_term"
                    style="@style/text_style_14_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tv_free"
                    style="@style/text_style_16_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp_2"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_4"
                    android:paddingTop="@dimen/dp_2"
                    android:text="x 12期免息" />

            </LinearLayout>


        </RelativeLayout>

        <TextView
            android:id="@+id/tv_buy_now"
            style="@style/text_style_20"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/confirm_bg"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_25"
            android:paddingRight="@dimen/dp_25"
            android:text="提交订单" />


    </LinearLayout>

</LinearLayout>