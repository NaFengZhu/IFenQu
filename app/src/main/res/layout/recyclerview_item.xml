<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:padding="@dimen/dp_2">

    <ImageView
        android:id="@+id/iv_product_img"
        android:layout_width="@dimen/dp_187"
        android:layout_height="@dimen/dp_140"
        android:layout_gravity="center"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/tv_product_name"
        style="@style/text_style_11"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_31.5"
        android:ellipsize="end"
        android:gravity="top|center_horizontal"
        android:maxLines="2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_total_price"
            style="@style/text_style_9_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1" />

        <TextView
            style="@style/tab_style_11_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_terms"
            style="@style/text_style_9_2"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_15"
            android:background="@drawable/shop_head_bg2"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="¥"
            android:textColor="@color/red_1" />

        <TextView
            android:id="@+id/tv_term_price"
            style="@style/text_style_15_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1" />

        <TextView
            style="@style/text_style_9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_12"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text=" 起" />
    </LinearLayout>

</LinearLayout>