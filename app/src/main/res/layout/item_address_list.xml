<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/bg_1"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_item_address_list"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp_14"
        android:background="@color/colorWhite"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_address_name"
                style="@style/text_style_16_3"
                android:text="六一套"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tv_address_phone"
                style="@style/text_style_16_3"
                android:text="15618917765"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content" />


        </RelativeLayout>

        <TextView
            android:id="@+id/tv_address"
            style="@style/text_style_14"
            android:text="上海市徐汇区徐虹北路20号邑浦江301爱分趣网络技术（上海）有限公司"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:maxLines="5"
            android:ellipsize="end"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_height="wrap_content" />

        <View style="@style/view_border_style"></View>

        <RelativeLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_address_flag"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:background="@drawable/receipt_bg" />
            <TextView
                android:layout_toRightOf="@+id/tv_address_flag"
                android:layout_marginLeft="@dimen/dp_8"
                android:id="@+id/tv_address_tag"
                style="@style/text_style_14_9"
                android:layout_centerVertical="true"
                android:text="设置为默认地址"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_address_deleted"
                android:layout_alignParentRight="true"
                style="@style/text_style_14"
                android:background="@drawable/product_bottom_bg2"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:paddingRight="@dimen/sp_16"
                android:paddingLeft="@dimen/dp_16"
                android:text="删除"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_toLeftOf="@+id/tv_address_deleted"
                android:layout_marginRight="@dimen/dp_8"
                style="@style/text_style_14"
                android:background="@drawable/product_bottom_bg2"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:paddingRight="@dimen/sp_16"
                android:paddingLeft="@dimen/dp_16"
                android:text="编辑"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content" />



        </RelativeLayout>

    </LinearLayout>

</LinearLayout>